{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "lib": ["ES2023"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true, // Enables all strict type-checking options
    "baseUrl": "./src",
    "typeRoots": [
      "./src/type",
      "./node_modules/@types",
    ],
  },
  "include": [
    "./src/**/*",
    "config/**/*",
    "./**/*.ts", "./src/*.ts", "../../libs/*.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules/*",
    "./dist",
    "./**/*.spec.ts",
    "./**/*.spec.js",
  ]
}